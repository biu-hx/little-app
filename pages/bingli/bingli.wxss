  box-sizing: border-box;
}

.bingli_image {
  width: 100vw;
  white-space: normal;
}
.cover-image{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 35rpx 35rpx 0;
}
.closeBingli{
    position: absolute;
    right: 40rpx;
    top: 28rpx;
    width: 32rpx;
    height: 32rpx;
}
.big_image_view{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,.3);
}
.swiper_view{
  width: 627rpx;
  height: 940rpx;
