.login_view{
  margin-top: 42rpx;
  background: white;
  text-align: center;
  position: relative;
}
.common_input{
  display: inline-block;
  width: 610rpx;
  height: 135rpx;
  color: #000;
  font-size: 32rpx;
  text-align: left;
  padding: 0 90rpx;
  box-sizing: border-box;
}
.phcolor{
  color: #d3d3d3;
  font-size: 32rpx;
  font-weight: 200;
}
.user_name{
  border-bottom: 1rpx solid #e2e2e2;
}
.forget_pwd{
  width: 100%;
  display: block;
  color: #1fce86;
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  text-align: right;
}
.btn_primary{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 88rpx;
  color: #b7b7b7;
  font-size: 36rpx;
  border: 1rpx solid #d6d6d6;
  background: white;
}
.green_btn{
  color: #fff;
  background: #1fce87;
}