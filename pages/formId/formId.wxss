/* components/saveFormId/formId.wxss */
.form_box {
  width: 100%;
  height: 100%;
  position: relative;
  display: block;
}

.btn-hidden {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0);
  line-height: normal;
  padding: 0;
  opacity: 0;
}

.btn-hidden::after {
  border: 0;
}