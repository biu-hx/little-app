.record_nav{
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  background: white;
  align-items: center;
  font-size: 28rpx;
  color: #5f5f5f;
}
.record_nav>text{
  flex-grow: 1;
  text-align: center;
  line-height: 36rpx;
  position: relative;
}
.record_nav>text:not(:last-child){
  border-right: 1rpx solid #e2e2e2;
}
.record_nav>text.active{
  color: #27ce8a;
}
.record_nav>text.active::before{
  content: '';
  display: inline-block;
  width: 134rpx;
  height: 2px;
  background: #27ce8a;
  position: absolute;
  left: 50%;
  bottom: -24rpx;
  transform: translateX(-50%);
}
.container{
  margin: 16rpx 0;
}
.record_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx 32rpx 28rpx;
}
.record_item:not(:last-child){
  border-bottom: 1rpx solid #e2e2e2;
}
.order_num{
  font-size: 30rpx;
  color: #4c4c4c;
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
}
.record_item>image{
  width: 16rpx;
  height: 26rpx;
}
.order_num>button{
  display: inline-block;
  font-size: 18rpx;
  line-height: 1;
  padding: 6rpx 15rpx;
  background: none;
  border-radius: 5rpx;
  margin-left: 20rpx;
}
.order_num>button.busy1{
  color: #27ce8a;
  border: 1rpx solid #27ce8a;
}
.order_num>button.busy8{
  color: #f39700;
  border: 1rpx solid #f39700;
}
.order_num>button.busy11{
  color: #f14c4c;
  border: 1rpx solid #f14c4c;
}
.order_num>button.busy9{
  color: grey;
  border: 1rpx solid grey;
}
.order_num>button.busy0{
  color: yellow;
  border: 1rpx solid yellow;
}
.order_time{
  font-size: 24rpx;
  line-height: 1;
  color: #acacac;
}
.btn_view{
  text-align: center;
  padding: 30rpx 0;
}
.btn_green{
  display: inline-block;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  font-size: 30rpx;
}
.btn_border_green{
  display: inline-block;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  font-size: 30rpx;
  color: #1fce87;
  border: 1rpx solid #1fce87;
  margin-right: 30rpx;
}
.nomsg_view{
  width: 100%;
  height: calc(100vh - 104rpx);
  background: white;
  margin-top: 24rpx;
  padding-top: 186rpx;
  box-sizing: border-box;
  text-align: center;
}
.nomsg_view>image{
  width: 311rpx;
  height: 199rpx;
  margin-bottom: 90rpx;
}
.nomsg_view>view{
  display: block;
  font-size: 28rpx;
  color: #bdbdbd;
}
.getMore{
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  color: #bdbdbd;
  font-size: 24rpx;
  line-height: 24rpx;
  text-align: center;
}
.getMore>image{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  vertical-align: top;
  margin-right: 20rpx;
}