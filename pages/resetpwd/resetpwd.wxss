/**login.wxss**/
.login_view{
  margin-top: 42rpx;
  background: white;
  text-align: center;
}
.common_input{
  display: inline-block;
  width: 610rpx;
  height: 135rpx;
  color: #000;
  font-size: 32rpx;
  text-align: left;
  box-sizing: border-box;
  padding: 0 90rpx;
}
.phcolor{
  color: #d3d3d3;
  font-size: 32rpx;
  font-weight: 200;
}
.user_name{
  border-bottom: 1rpx solid #e2e2e2;
}
.btn_primary{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 88rpx;
  color: #b7b7b7;
  font-size: 36rpx;
  border: 1rpx solid #e2e2e2;
  background: white;
  margin-top: 40rpx;
}
.send_verify{
  display: inline-block;
  height: 60rpx;
  border-radius: 60rpx;
  padding: 0 25rpx;
  line-height: 60rpx;
  color: white;
  font-size: 28rpx;
  background: #1fce86;
  position: absolute;
  right: 30rpx;
  top: 170rpx;
  z-index: 999;
}
button.send_verify[disabled]{
  background: #1fce86;
  color: white;
}
.w400{
  width: 400rpx;
}
.green_btn{
  color: #fff;
  background: #1fce87;
}