.pt35{
  padding-top: 35rpx;
}

.container_view{
  margin-bottom: 16px;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.personal_item{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 34rpx;
  line-height: 38rpx;
  flex-wrap: wrap;
  color: #4c4c4c;
}
.personal_time>view{
  font-size: 24rpx;
  line-height: 1;
  color: #acacac;
  margin-top: 17rpx;
}
.personal_image{
  width: 60rpx;
}
.online_time{
  width: 38rpx;
  height: 38rpx;
}
.per_depa{
  width: 38rpx;
  height: 39rpx;
}
.good_at{
  width: 38rpx;
  height: 33rpx;
}
.infor{
  width: 33rpx;
  height: 38rpx;
}
.arrow_right{
  width: 16rpx;
  height: 26rpx;
}
.personal_info{
  display: block;
}
.personal_time>view.personal_infor{
  width: 500rpx;
  line-height: 40rpx;
}
.edit_view{
  display: block;
}
.edit_title{
  display: block;
  font-size: 34rpx;
  margin-bottom: 36rpx;
}
.edit_input{
  width: calc(100% - 60rpx);
  height: 78rpx;
  border: 1rpx solid #dcdcdc;
  border-radius: 10rpx;
  padding: 19rpx 30rpx;
  font-size: 28rpx;
  color: #373737;
  white-space: normal;
}
.edit_desc{
  display: block;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #a6a6a6;
  line-height: 37rpx;
}
.pb48{
  padding-bottom: 48rpx;
}
.btn_green{
  width: 100%;
  height: 87rpx;
  line-height: 87rpx;
  font-size: 36rpx;
}