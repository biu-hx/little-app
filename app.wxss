/**app.wxss**/
page {
  background: #f0f0f0;
}

view {
  font-family: "微软雅黑";
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  overflow: hidden;
  margin: auto;
  padding: 0 30rpx;
}

button::after {
  border: none;
}

.btn_green {
  width: 264rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 76rpx;
  font-size: 36rpx;
  color: #fff;
  background: #1fce87;
}

.container_view {
  width: 100%;
  border-radius: 10rpx;
  box-shadow: 0 0 20px rgb(229, 229, 229);
  position: relative;
  background: white;
}

input {
  overflow: inherit;
}

.user_image {
  position: absolute;
  top: 50rpx;
  width: 36rpx;
  height: 38rpx;
}

.pwd_image {
  position: absolute;
  top: 180rpx;
  width: 33rpx;
  height: 38rpx;
}
